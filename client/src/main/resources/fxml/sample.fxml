            </VBox.margin>
            <Image url="@../images/wheel.gif" />
        </ImageView>
        <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="20.0" prefWidth="200.0" text="Waiting for opponent"
               textAlignment="CENTER" textFill="#063483" textOverrun="CLIP">
            <font>
                <Font size="19.0" />
            </font>
            <padding>
                <Insets top="10.0" />
            </padding>
        </Label>
    </VBox>
</AnchorPane>
